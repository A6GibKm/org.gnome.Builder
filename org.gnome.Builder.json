        "/bin/sphinx-autogen",
        "/bin/sphinx-quickstart",
        "/bin/update-desktop-database",
        "/bin/update-mime-database",
        "/bin/chardetect",
        "/lib/avahi",
        "/lib/cmake",
        "/lib/gedit",
        "/libexec/installed-tests",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/vala",
        "/share/bash-completion",
